                <!--<input id="friend-code" name="friend-code" type="text" placeholder="00000" maxlength="5"-->
                <!--minlength="5">-->
                <!--</div>-->
                <!--<button class="friend-buttons" type="submit">JOIN</button>-->
                <!--</form>-->
                <!--<button class="friend-buttons" onclick="setPlayDiv()">CANCEL</button>-->
                <!--</div>-->
            </div>
            <div id="image-div">
                <img src="https://via.placeholder.com/250" alt="https://via.placeholder.com/250">
            </div>
        </div>
        <div id="rules-div" class="card">
            <div id="goal-text">
                <p>Goal: Arrange your ships and be the first to destroy all enemy ships</p>
            </div>
            <div id="controls-div">
                <div>
                    <img class="control-img" src="https://via.placeholder.com/150"
                         alt="https://via.placeholder.com/150">
                    <h3>Drag & Drop</h3>
                    <p>Drag your ships to te desired position</p>
                </div>
                <div>
                    <img class="control-img" src="https://via.placeholder.com/150"
                         alt="https://via.placeholder.com/150">
                    <h3>Rotate</h3>
                    <p>Rotate your ships into the correct position</p>
                </div>
                <div>
                    <img class="control-img" src="https://via.placeholder.com/150"
                         alt="https://via.placeholder.com/150">
                    <h3>Fire</h3>
                    <p>Fire on the enemy ships</p>
                </div>
            </div>
            <button id="return" onclick="returnToDef()">Got it!</button>
        </div>
    </div>
</main>
<script type='text/javascript' src='javascripts/ui.js'></script>
